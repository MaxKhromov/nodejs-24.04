<h2>{{title}}</h2>

<form method="POST" action="/users/register" autocomplete="off" enctype="multipart/form-data">

    <div class="row">
        <div class="form-group col-12">
            <label for="">Логин</label>
            <input type="text" class="form-control" name="userName"
                value="{{#compare userName 'undefined' operator="!="}}{{userName}}{{else}}{{/compare}}">
        </div>

        <div class="form-group col-12">
            <label for="">Пароль</label>
            <input type="password" class="form-control" name="password"
                value="{{#compare password 'undefined' operator="!="}}{{password}}{{else}}{{/compare}}">
        </div>

        <div class="form-group col-12">
            <label for="">Подтверждение пароля</label>
            <input type="password" class="form-control" name="confirmPassword"
                value="{{#compare confirmPassword 'undefined' operator="!="}}{{confirmPassword}}{{else}}{{/compare}}">
        </div>
    </div>

    <div class="row">
        <div class="form-group col-12 col-lg-4">
            <label for="">Имя</label>
            <input type="text" class="form-control" name="firstName"
                value="{{#compare firstName 'undefined' operator="!="}}{{firstName}}{{else}}{{/compare}}">
        </div>

        <div class="form-group col-12 col-lg-4">
            <label for="">Фамилия</label>
            <input type="text" class="form-control" name="secondName"
                value="{{#compare secondName 'undefined' operator="!="}}{{secondName}}{{else}}{{/compare}}">
        </div>

        <div class="form-group col-12 col-lg-4">
            <label for="">Отчество</label>
            <input type="text" class="form-control" name="patronymic"
                value="{{#compare patronymic 'undefined' operator="!="}}{{patronymic}}{{else}}{{/compare}}">
        </div>
    </div>

    <div class="row">
        <div class="form-group col-12 col-lg-6">
            <label for="">Аватар</label>
            <div class="custom-file">
                <input type="file" class="custom-file-input" name="inputAvatar" id="inputAvatar">
                <label class="custom-file-label" for="inputAvatar" aria-describedby="inputGroupFileAddon02">Выберите
                    фотографию</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group col-12">
            <label for="">О себе</label>
            <textarea type="textarea" class="form-control" name="description"
                value="{{#compare description 'undefined' operator="!="}}{{description}}{{else}}{{/compare}}"></textarea>
        </div>
    </div>

    {{>messages}}
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fas fa-database"></i> Зарегистрироваться</button>
    </div>
</form>